# Copy this file to .env and fill in real values

# MongoDB connection (Atlas or local)
# Example Atlas: mongodb+srv://<username>:<password>@cluster0.3f7vxpu.mongodb.net/<dbname>?retryWrites=true&w=majority
MONGO_URI=REPLACE_WITH_YOUR_MONGO_URI

# App secret (use a long random string) any random string of above length 32 plus
SECRET_STR=REPLACE_WITH_RANDOM_SECRET

# Environment
NODE_ENV=development
PORT=5000

# SMTP (send emails) - use your own SMTP account from brevo.com
SMTP_USER=REPLACE_WITH_YOUR_SMTP_USER
SMTP_PASS=REPLACE_WITH_YOUR_SMTP_PASS
SENDER_EMAIL=REPLACE_WITH_YOUR_SENDER_EMAIL
